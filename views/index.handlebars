{{!-- HEADER --}}
<nav class="navbar navbar-nav fixed-top">
  <span class="navbar-brand mb-0 h1"><a class="main-title">Le Burger</a></span>
</nav>



{{!-- MAIN CONTENT - BURGER LIST --}}
<div class="container">


{{!-- ANIMATED BURGER GIF --}}
<img src="https://media.giphy.com/media/hBSgGOTLG5yJW/giphy.gif" class="img-fluid circle"></img>

  <div class="row">
    <div class="col s2">
      	<hr>
      <a class="main-title-2">Fresh Burgers</a>
      	<hr>
      {{#each burgers}}
        {{#unless devoured}}

          {{> burgers/devour-block devour=true}}

      {{/unless}}
        {{/each}}
    </div>

    <div class="col s2">
      	<hr>
     <a class="main-title-2">Devoured Burgers</a>
     	<hr>
      {{#each burgers}}

       {{#if devoured}}

          {{> burgers/devour-block devour=false}}

        {{/if}}
      {{/each}}
    </div>
  </div>
</div>


{{!-- FOOTER --}}
<footer class="page-footer fixed-bottom">
  <span class="navbar-brand mb-0 h1">


      <form class="form-inline create-form">

         <div class="form-group mx-sm-3 mb-2">

          <label for="ca"></label><textarea class="form-control" type="text" value="0" id="ca" name="name" rows="1" placeholder="Type in the Name of your Desired Burger..."></textarea>

        </div>


  <button type="submit" class="btn btn-outline-info"><i class="material-icons">
      fastfood</i>
    Add Burger</button>
  </form>


  </span>
</footer>
