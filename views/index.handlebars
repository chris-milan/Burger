<h1>Eat-Da-Burger!</h1>
<img src="https://media.giphy.com/media/hBSgGOTLG5yJW/giphy.gif"></img>

<div class="container">
  <div class="row">
    <div class="col s4">
      <h2>Burgers</h2>
      {{#each burgers}}
        {{#unless devoured}}

          {{> burgers/devour-block devour=true}}

      {{/unless}}
        {{/each}}
    </div>

    <div class="col s4">
      <h2>Devoured Burgers</h2>
      {{#each burgers}}

       {{#if devoured}}

          {{> burgers/devour-block devour=false}}

        {{/if}}
      {{/each}}
    </div>
  </div>


  <div class="row">
    <div class="col s4">

      <form class="create-form">

        <div class="form-group">

          <label for="ca"></label><textarea class="form-control" type="text" value="0" id="ca" name="name"></textarea>

        </div>


    </div>
  </div>


  <button type="submit" class="btn btn-outline-info"><i class="material-icons">
      fastfood</i>
    Add a Burger</button>
  </form>

</div>
